# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/notehelper

# Flask Configuration
SECRET_KEY=your-secret-key-here-change-in-production
FLASK_ENV=development
FLASK_DEBUG=True

# Application Settings
APP_NAME=NoteHelper

# Entra ID (Azure AD) OAuth Configuration (optional - app works without it, but requires setup)
# To set up Entra ID authentication:
# 1. Register an app in Azure Portal (Entra ID > App registrations)
# 2. Add redirect URI: http://localhost:5000/auth/callback
# 3. Create a client secret
# 4. Copy the values below
AZURE_CLIENT_ID=your-azure-client-id
AZURE_CLIENT_SECRET=your-azure-client-secret
AZURE_TENANT_ID=your-tenant-id-or-common
AZURE_REDIRECT_URI=http://localhost:5000/auth/callback
